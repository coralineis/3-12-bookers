<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><% link_to "Show", book_path(book.id) %></td>
        <td><% link_to "Edit", book_path(book.id), method: :patch %></td>
        <td><% link_to "Destroy", book_path(book.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>

<h1>Editing Book</h1>

<%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>

  <label for="book-title">Title</label><br>
  <%= f.text_field :title %><br>

  <label for="book-body">Body</label><br>
  <%= f.text_area :body %><br>

  <%= link_to "Show", "/books/:id" %> |
  <%= link_to "Back", "/books" %>

<% end %>